<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.fandm.enovak.updatetimingcollector">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- To save to log file -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/> <!-- To read IMEI number -->
    <uses-permission android:name="android.permission.INTERNET"/> <!-- To transmit log file to back end -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogView" />

        <receiver
            android:name=".LogBcastReceiver"
            android:exported="true">
            <intent-filter>
                <data android:scheme="package"/>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>